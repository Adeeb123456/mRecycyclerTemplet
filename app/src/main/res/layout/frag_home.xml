<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ae.lateston.uaecompanies.activity.MainActivity"
        android:background="@android:color/white"
        tools:showIn="@layout/app_bar_main">

        <include
            android:id="@+id/include"
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/halfStdmargin"
            android:layout_marginTop="@dimen/halfStdmargin"
            android:minHeight="120dp"
            android:scrollbarSize="1dp"
            android:scrollbarThumbHorizontal="@drawable/scroll_thumb"
            android:scrollbars="horizontal" />

        <Button
            android:id="@+id/buttonnextfrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="loadnextFrg" />


    </LinearLayout>


</layout>